---
import NavigationDesktop from "./NavigationDesktop";
import NavigationMobile from "./NavigationMobile";
import { getLangFromUrl } from "../i18n/utils";
interface Props {
  pages: string[];
}

const { pages } = Astro.props;
const { pathname } = Astro.url;
const lang = getLangFromUrl(Astro.url);
---

<header class="header-desktop">
  <NavigationDesktop pages={pages} lang={lang} client:load />
</header>

<header class="header-mobile">
  <NavigationMobile pages={pages} pathname={pathname} client:load />
</header>

<style>
  header {
    position: fixed;
    width: 100%;
    display: flex;
    z-index: 100;
  }
  .header-mobile {
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
  }

  .header-desktop {
    box-sizing: border-box;
    justify-content: space-between;
    align-items: center;
    margin-top: 0.75rem;
    flex-direction: row;
  }

  @media (width < 50rem) {
    .header-desktop {
      display: none;
    }
  }

  @media (width >= 50rem) {
    .header-mobile {
      display: none;
    }
  }
</style>
