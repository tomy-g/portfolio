---
import { Image } from "astro:assets";
import NavigationDesktop from "./NavigationDesktop";
import NavigationMobile from "./NavigationMobile";
import downloadIcon from "../assets/download-icon-pink.svg";
import languageIcon from "../assets/language-icon.svg";
import "../styles/header.scss";
interface Props {
  pages: string[];
}

const { pages } = Astro.props;
const { pathname } = Astro.url;
---

<header class="header-desktop">
  <NavigationDesktop pages={pages} client:load />
</header>

<header class="header-mobile">
  <NavigationMobile pages={pages} pathname={pathname} client:load />
</header>

<style>
  header {
    position: absolute;
    width: 100vw;
    display: flex;
  }
  .header-mobile {
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
  }

  .header-desktop {
    box-sizing: border-box;
    justify-content: space-between;
    align-items: center;
    margin-top: 0.75rem;
    flex-direction: row;
  }

  @media (width < 50rem) {
    .header-desktop {
      display: none;
    }
  }

  @media (width >= 50rem) {
    .header-mobile {
      display: none;
    }
  }

  
</style>
