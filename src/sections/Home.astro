---
import gradient from "../images/Vector 2-min.png";
import Github from "@lucide/astro/icons/github";
import Linkedin from "@lucide/astro/icons/linkedin";
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="section section--1">
  <div class="info">
    <div class="data">
      <h1>{t("HOME.TITLE")}</h1>
      <h2>Front-End Developer / UI</h2>
      <p class="description">
        {t("HOME.DESCRIPTION")}
        <br />
        <br />
        {t("HOME.HIGHLIGHT")}
        <strong
          ><a
            href="https://maps.app.goo.gl/98ggs2Xvfz3kNJxKA"
            target="_blank"
            rel="noopener noreferrer">{t("HOME.LOCATION")}</a
          ></strong
        >.
      </p>
      <div class="buttons">
        <a href={lang === "es" ? "/es#projects" : "#projects"} class="cta">
          <span>{t("HOME.CTA")}</span>
        </a>
        <a href="https://github.com/tomy-g" class="social-button">
          <Github stroke-width={1.5} stroke="#a5a3b7" size={30} />
        </a>
        <a
          href="https://www.linkedin.com/in/tomas-goizueta/"
          class="social-button"
        >
          <Linkedin stroke-width={1.5} stroke="#a5a3b7" size={30} />
        </a>
      </div>
    </div>
    <Image class="gradient" priority src={gradient} alt="" />
  </div>
</section>

<style>
  @keyframes gradient-bg {
    to {
      background-position: var(--bg-size) 0;
    }
  }

  * {
    margin: 0;
    padding: 0;
    color: var(--white-primary);
    font-family: "Inter Variable", sans-serif;
  }

  .warning {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    top: -8rem;
    width: 100%;
    background-color: rgba(255, 0, 89, 0.195);
    padding-top: 1rem;
    padding-bottom: 1rem;
    border-radius: 1rem;
    color: rgb(163, 163, 163);
  }

  .link-warning {
    color: var(--pink-primary);
  }

  .warning-1 {
    margin-left: auto;
    margin-right: auto;
  }
  .warning-2 {
    margin-top: 1rem;
    margin-left: auto;
    margin-right: auto;
  }

  html {
    overflow-x: hidden;
  }

  .section {
    height: 100vh;
    height: 100dvh;
  }

  .section--1 {
    width: calc(50vw + 14rem);
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    height: 100vh;
    height: 100dvh;
    /* margin-bottom: 20rem; */
  }

  .info {
    display: inline-flex;
    position: relative;
    flex-direction: row;
    margin-top: auto;
    margin-bottom: auto;
    align-items: center;
  }

  .info h1 {
    display: inline-block;
    background: linear-gradient(270deg, #fe19aa 0%, #0e37f1 250%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0px 8px 24px rgba(0, 0, 0, 0.15);
    font-size: calc(min(4.6875rem, 6.5vw));
    font-weight: 800;
  }

  .data {
    display: inline-flex;
    position: relative;
    flex-direction: column;
    margin-top: 4rem;
    margin-bottom: 4rem;
  }
  .gradient {
    z-index: -2;
    position: absolute;
    overflow: hidden;
    left: 0%;
    top: -15%;
  }

  .info h2 {
    display: inline-block;
    background: var(--fade-gray);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 700;
    margin-top: calc(max(2vw, 2rem));
    background-clip: text;
    font-size: 2.5rem;
  }
  .description {
    color: var(--light-gray);
    max-width: 481px;
    margin-top: 3.7vh;
    margin-top: 3.7svh;
    margin-top: 3.7dvh;
    font-size: 1.125rem;
    font-weight: 400;
  }

  .info strong {
    background: linear-gradient(90deg, #0e37f1 -300%, #fe19aa 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: 1.125rem;
    font-weight: 600;
  }

  .info a {
    text-decoration: none;
  }

  .buttons {
    display: flex;
    margin-top: 6.7vh;
    margin-top: 6.7svh;
    margin-top: 6.7dvh;
    max-width: 30.06rem;
    align-items: center;
  }

  .social-button {
    background: none;
    border: none;
    padding: 0;
    font: inherit;
    cursor: pointer;
    outline: inherit;
    margin: 0.625rem;
    /* color: var(--light-gray, #a5a3b7); */
    transform: scale(1);
    transition: transform 150ms cubic-bezier(0.4, 0, 0.2, 1);

    svg {
      transition: stroke 150ms cubic-bezier(0.4, 0, 0.2, 1);
    }
  }

  .social-button:hover {
    transform: scale(1.1);

    svg {
      stroke: var(--white-primary, #ebeaf3);
    }
  }

  .cta {
    cursor: pointer;
    border: 2px solid transparent;
    border-radius: 10px;
    background:
      linear-gradient(var(--black-primary), var(--black-primary)) padding-box,
      linear-gradient(
          90deg,
          var(--pink-primary),
          var(--purple-primary),
          var(--pink-primary)
        )
        0 0 / var(--bg-size) 100% border-box;
    background-size: 200% 200%;
    animation: gradient-bg 8s linear infinite;
    border-radius: 10px;
    padding: 0.81rem 3rem;
    margin-right: auto;
    transform: scale(1);
    transition: transform 300ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .cta span {
    font-weight: 600;
    font-size: 1.5rem;
    line-height: 29px;
    background: linear-gradient(
        90deg,
        var(--pink-primary),
        var(--purple-primary),
        var(--pink-primary)
      )
      0 0 / var(--bg-size);
    background-size: 200% 200%;
    animation: gradient-bg 8s linear infinite;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 200%;
    background-clip: text;
    text-fill-color: transparent;
    transform: scale(1);
    transition: transform 300ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .cta:hover {
    transform: scale(1.1);
  }

  .cta:hover span {
    transform: scale(1.1);
  }

  @media (width < 50em) {
    .section--1 {
      width: 90%;
      justify-content: flex-start;
      margin-bottom: 150px !important;
    }
    .info {
      margin-left: 10vw;
    }
    .info h1 {
      font-size: 3.25rem;
    }
    .info h2 {
      margin-top: 2.12rem;
      font-size: 1.625rem;
    }

    .info p {
      margin-top: 1.88rem;
      font-size: 0.875rem;
      max-width: 20rem;
    }

    .info strong {
      font-size: 0.875rem;
    }

    .buttons {
      margin-top: 3rem;
      max-width: 20rem;
    }

    .social-button {
      margin: 0.625rem 0.5rem;
    }

    .cta {
      padding: 0.81rem 1.5rem;
    }
  }

  @media (width >= 50em) {
    .body::before {
      position: absolute;
      right: 0;
      top: 0;
      content: "";
      width: 100%;
      height: 100%;
      opacity: 15%;
    }
  }
</style>
